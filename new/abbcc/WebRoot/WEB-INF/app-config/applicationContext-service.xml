<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">
	<bean id="baseServiceImpl"
		class="com.abbcc.service.impl.BaseServiceImpl">
		<property name="productDao">
			<ref bean="productDaoProxy" />
		</property>
		<property name="productTypeDao">
			<ref bean="productTypeDaoProxy" />
		</property>
		<property name="pzDao">
			<ref bean="pzDaoProxy" />
		</property>
		<property name="cpgqxxDao">
			<ref bean="cpgqxxDaoProxy" />
		</property>
		<property name="jytjDao">
			<ref bean="jytjDaoProxy" />
		</property>
		<property name="messageDao">
			<ref bean="messageDaoProxy"/>
		</property>
	</bean> 
	 
	 <bean id="productServiceProxy"
                class="org.springframework.aop.framework.ProxyFactoryBean"> 
	    <property name="proxyInterfaces">
	        <value>com.abbcc.service.ProductService</value>
	    </property>
	    <property name="target">
	        <ref bean="productServiceImpl" />
	    </property>
	</bean>  
	<bean id="productServiceImpl" class="com.abbcc.service.impl.ProductServiceImpl" parent="baseServiceImpl"/>
		  
	<bean id="productService" parent="baseTransactionProxy">
		<property name="target">
			<ref bean="productServiceProxy" />
		</property>
	</bean>
	<bean id="messageServiceImpl" class="com.abbcc.service.impl.MessageServiceImpl" parent="baseServiceImpl"/>
		  
	<bean id="messageService" parent="baseTransactionProxy">
		<property name="target">
			<ref bean="messageServiceImpl" />
		</property>
	</bean>
 	<bean id="managerService" class="com.abbcc.service.impl.ManagerServiceImpl">
		<property name="managerDao">
			<ref bean="managerDao"/>
		</property>
		<property name="hyjbxxDao">
			<ref bean="hyjbxxDao"/>
		</property>
		<property name="gsjbxxDao">
			<ref bean="gsjbxxDao"/>
		</property>
	</bean> 	
	<bean name="/managerLogin" class="com.abbcc.customer.ManagerLoginAction" scope="prototype">    
		<property name="managerService">
			<ref bean="managerService"/>
		</property>
	</bean>
	<bean name="/memberManage" class="com.abbcc.customer.MemberManageAction" scope="prototype">    
		<property name="managerService">
			<ref bean="managerService"/>
		</property>
	</bean> 
	<bean id="hyjbxxService" class="com.abbcc.service.impl.HyjbxxServiceImpl">
		<property name="hyjbxxDao">
			<ref bean="hyjbxxDao"/>
		</property>
		<property name="gsjbxxDao">
			<ref bean="gsjbxxDao"/>
		</property>
		<property name="gsxxxxDao">
			<ref bean="gsxxxxDao"/>
		</property>
		<property name="honorDao">  
			<ref bean="honorDao"/>
		</property>
		<property name="companyDao">  
			<ref bean="companyDao"/>
		</property>
		<property name="techDao">  
			<ref bean="techDao"/>
		</property>
	</bean> 
</beans>